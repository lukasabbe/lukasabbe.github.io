---

<footer class="footer">
	<div class="footer-content">
		<div class="social-links">
			{socialLinks.map((link) => (
				<a 
					href={link.url} 
					class="social-link" 
					target="_blank" 
					rel="noopener noreferrer"
					aria-label={`Visit my ${link.name} profile`}
				>
					<span class="social-icon" set:html={link.icon} />
					<span class="social-name">{link.name}</span>
				</a>
			))}
		</div>
		<div class="footer-text">
			<p>&copy; {new Date().getFullYear()} Lukas. All rights reserved.</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: linear-gradient(135deg, #3F72AF 0%, #577597 100%);
		padding: 2rem 0;
		border-radius: 20px 20px 0 0;
		box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
		margin-top: auto;
	}

	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
		text-align: center;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 1.5rem;
		flex-wrap: wrap;
	}

	.social-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 12px 20px;
		background: rgba(255, 255, 255, 0.1);
		color: white;
		text-decoration: none;
		border-radius: 12px;
		font-weight: 500;
		backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: translateY(-2px);
		box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
	}

	.social-link:active {
		transform: translateY(0);
	}

	.social-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 24px;
		height: 24px;
	}

	.social-name {
		font-size: 0.9rem;
	}

	.footer-text {
		color: rgba(255, 255, 255, 0.8);
		font-size: 0.9rem;
		margin-top: 1rem;
	}

	.footer-text p {
		margin: 0;
	}

	/* Dark theme styles */
	:global(.dark-theme) .footer {
		background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
	}

	@media (max-width: 768px) {
		.footer {
			border-radius: 0;
			padding: 1.5rem 0;
		}
		
		.footer-content {
			padding: 0 1rem;
		}
		
		.social-links {
			flex-direction: row;
			flex-wrap: wrap;
			gap: 1rem;
			justify-content: center;
		}
		
		.social-link {
			justify-content: center;
			padding: 12px 16px;
			font-size: 0.85rem;
			min-width: 120px;
		}
		
		.social-name {
			font-size: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		.footer {
			padding: 1rem 0;
		}
		
		.footer-content {
			padding: 0 0.5rem;
		}
		
		.social-links {
			flex-direction: column;
			gap: 0.75rem;
		}
		
		.social-link {
			padding: 10px 12px;
			font-size: 0.8rem;
			min-width: auto;
		}
		
		.social-icon {
			width: 20px;
			height: 20px;
		}
		
		.footer-text {
			font-size: 0.8rem;
		}
	}
</style>
